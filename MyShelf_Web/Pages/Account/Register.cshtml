@page
@model MyShelf_Web.Pages.Account.RegisterModel
@{
}

<div class="row">
    <div class="col-12">
        <label class="fs-1 align-center">Register</label>
    </div>
</div>
<form method="post">
    <div class="row">
        <div class="col-4">
            <label asp-for="NewUser.FirstName" class="form-label">First Name:</label>
        </div>
        <div class="col-12">
            <input asp-for="NewUser.FirstName" type="text" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <label asp-for="NewUser.LastName" class="form-label">Last Name:</label>
        </div>
        <div class="col-12">
            <input asp-for="NewUser.LastName" type="text" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <label asp-for="NewUser.Email" class="form-label">Email:</label>
        </div>
        <div class="col-12">
            <input asp-for="NewUser.Email" type="text" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <label asp-for="NewUser.Password" class="form-label">Password:</label>
        </div>
        <div class="col-12">
            <input asp-for="NewUser.Password" type="text" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <label asp-for="NewUser.ConfirmPassword" class="form-label">ConfirmPassword:</label>
        </div>
        <div class="col-12">
            <input asp-for="NewUser.ConfirmPassword" type="text" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-12">

        </div>
    </div>
</form>