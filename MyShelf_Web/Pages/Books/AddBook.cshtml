@page
@model MyShelf_Web.Pages.Books.AddBookModel
@{
}

<div class="row text-center">
    <div class="col-12">
        <label class="form-label fs-1">Add Book</label>
    </div>

</div>
<form method="post">
    <div class="row my-2">
        <div class="col-2">
            <label asp-for="NewBook.BookTitle" class="form-label"></label>
        </div>
        <div class="col-12">
            <input asp-for="NewBook.BookTitle" type="text" class="form-control" />
            <span asp-validation-for="NewBook.BookTitle" class="text-danger"></span>
        </div>
    </div>
    <div class="row my-2">
        <div class="col-2">
            <label asp-for="NewBook.BookSummary" class="form-label"></label>
        </div>
        <div class="col-12">
            <textarea asp-for="NewBook.BookSummary" type="text" class="form-control"></textarea>
            <span asp-validation-for="NewBook.BookSummary" class="text-danger"></span>
        </div>
    </div>
    <div class="row my-2">
        <div class="col-2">
            <label asp-for="NewBook.BookCoverImage" class="form-label"></label>
        </div>
        <div class="col-12">
            <input asp-for="NewBook.BookCoverImage" type="email" class="form-control" />
            <span asp-validation-for="NewBook.BookCoverImage" class="text-danger"></span>
        </div>
    </div>
    <div class="row my-2">
        <div class="col-2">
            <label asp-for="NewBook.Price" class="form-label"></label>
        </div>
        <div class="col-12">
            <input asp-for="NewBook.Price" type="text" class="form-control" />
            <span asp-validation-for="NewBook.Price" class="text-danger"></span>
        </div>
    </div>
    <div class="row my-2">
        <div class="col-2">
            <label asp-for="NewBook.PageCount" class="form-label"></label>
        </div>
        <div class="col-12">
            <input asp-for="NewBook.PageCount" type="text" class="form-control" />
            <span asp-validation-for="NewBook.PageCount" class="text-danger"></span>
        </div>
    </div>
    <div class="row my-2">
        <div class="col-2">
            <label asp-for="NewBook.ISBN13" class="form-label"></label>
        </div>
        <div class="col-12">
            <input asp-for="NewBook.ISBN13" type="text" class="form-control" />
            <span asp-validation-for="NewBook.ISBN13" class="text-danger"></span>
        </div>
    </div>
    <div class="row my-2">
        <div class="col-2">
            <label asp-for="NewBook.AuthorID"></label>
        </div>
        <div class="col-10">
            <select asp-for="NewBook.AuthorID" class="form-control" asp-items="@Model.Authors"></select>
        </div>
    </div>
    <div class="row my-2">
        <div class="col-2">
            <label asp-for="NewBook.PublisherID"></label>
        </div>
        <div class="col-10">
            <select asp-for="NewBook.PublisherID" class="form-control" asp-items="@Model.Publishers"></select>
        </div>
    </div>
    <div class="row my-2">
        <div class="col-2">
            <label asp-for="NewBook.FormatID"></label>
        </div>
        <div class="col-10">
            <select asp-for="NewBook.FormatID" class="form-control" asp-items="@Model.Formats"></select>
        </div>
    </div>
    <div class="row my-2">
        <div class="col-2">
            <label asp-for="NewBook.LanguageID"></label>
        </div>
        <div class="col-10">
            <select asp-for="NewBook.LanguageID" class="form-control" asp-items="@Model.Languages"></select>
        </div>
    </div>

    <div class="row my-2">
        <div class="col-2">
            <label class="form-label">Genres</label>
        </div>
        <div class="col-10">
            @foreach(var g in Model.Genres)
            {
                <input type="checkbox" name="SelectedGenreIDs" class="form-check-input" value="@g.GenreID" checked="@g.IsSelected" />
                <label>@g.GenreName</label>
            }
        </div>
    </div>
    <div class="row my-2">
        <div class="col-12">
            <button type="submit" class="form-control btn btn-primary">Add Book</button>
        </div>
    </div>
</form>
